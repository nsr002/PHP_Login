{
    "name": "nsr002/php-login",
    "description": "Secure PHP Login and Password Reset System with OWASP Top 10 Security",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "phpmailer/phpmailer": "^6.9"
    },
    "autoload": {
        "psr-4": {
            "App\\Auth\\": "src/Auth/",
            "App\\Recovery\\": "src/Recovery/",
            "App\\Mail\\": "src/Mail/",
            "App\\Security\\": "src/Security/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
